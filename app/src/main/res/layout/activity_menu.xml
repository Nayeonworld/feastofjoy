<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/gamemode"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/btn_rotation"
            android:scaleType="fitXY"
            android:background="#FFFFFF"
            android:clickable="true"
            android:onClick="rotate"
            android:layout_marginRight="30dp"
            android:id="@+id/rotate"

            />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/btn_3drotation"
            android:scaleType="fitXY"
            android:background="#FFFFFF"
            android:clickable="true"
            android:onClick="rotate_3d"
            android:id="@+id/rotate_3d"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/btn_translate"
            android:scaleType="fitXY"
            android:background="#FFFFFF"
            android:clickable="true"
            android:onClick="translate"
            android:layout_marginRight="30dp"

            android:layout_marginTop="30dp"
            android:id="@+id/translate"

            />
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/btn_opacity"
            android:scaleType="fitXY"
            android:background="#FFFFFF"

            android:clickable="true"
            android:onClick="opacity"
            android:layout_marginTop="30dp"
            android:id="@+id/opacity"
            />
    </LinearLayout>

</LinearLayout>
